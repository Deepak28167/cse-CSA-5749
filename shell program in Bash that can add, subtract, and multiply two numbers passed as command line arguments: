#!/bin/bash

# Check if exactly two arguments were passed
if [ $# -ne 2 ]; then
  echo "Usage: $0 <number1> <number2>"
  exit 1
fi

# Parse arguments into variables
num1=$1
num2=$2

# Perform arithmetic operations and display results
echo "$num1 + $num2 = $(($num1 + $num2))"
echo "$num1 - $num2 = $(($num1 - $num2))"
echo "$num1 * $num2 = $(($num1 * $num2))"
